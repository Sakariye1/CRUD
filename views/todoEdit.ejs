<!DOCTYPE html>
<head>
    <title>Todo App</title>
    <link rel="stylesheet" href="/static/style.css" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" 
    integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>

<body>
    <div class="todo-container">
        <h2> Edit Top scorers World Cup 2022 list <i class="far fa-futbol"></i></h2>
        <div class="todo">
            <form action="" method="POST" class="todo-header">
                <input type="text" name="player">
                <input type="text" name="country">
                <input type="text" name="goal">
                <button type="submit"><span class="fas fa-plus"></span></button>
            </form>
            <ul class="todo-list">
                <% todoStats.forEach(details => { %>
                    <% if (details._id == idStat) { %>
                        <li class="todo-list-item">
                            <form action="/edit/<%= details._id %>" method="POST">
                                <input type="text" value="<%= details.player %>" name="player">
                                <input type="text" value="<%= details.country %>" name="country">
                                <input type="text" value="<%= details.goal %>" name="goal">
                                <button type="submit"><span class="far fa-check-square"></span></button>
                                <a href="/" class="cancel">
                                    <span class="fas fa-times"></span>
                                </a>
                            </form>
                        </li>
                    <% } else { %>
                        <li class="todo-list-item">
                            <div class="name"><%= details.player %></div>
                            <div class="country"><%= details.country %></div>
                            <span  class="stat"><%= details.goal %></span>
                            <a href="/edit/<%= details._id %>" class="edit"> <span class="fas fa-edit"></span>
                            </a>
                            <a href="/remove/<%= details._id %>" class="remove"> <span class="fas fa-times"></span>
                            </a>
                        </li>
                    <% } %>
                <% }) %>
            </ul>
        </div>
    </div>
</body>