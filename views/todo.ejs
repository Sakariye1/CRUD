<!DOCTYPE html>
<head>
    <title>Todo App</title>
    <link rel="stylesheet" href="/static/style.css" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" 
    integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>

<body>
    <div class="todo-container">
        <h2>Top scorers World Cup 2022 list <i class="far fa-futbol"></i></h2>
        <div class="todo">
            <form action="/" method="POST" class="todo-header">
                <input type="text" name="player" placeholder=" Add player">
                <input type="text" name="country" placeholder=" Country">
                <input type="text" name="goal" placeholder=" Add goals">
                <button type="submit"><span class="fas fa-plus"></span></button>
            </form>
            <ul class="todo-list">
                <% todoStats.forEach(details => { %>
                <li class="todo-list-item">
                    <div class="name"><%= details.player %></div>
                    <div class="country"><%= details.country %></div>
                    <span  class="stat"><%= details.goal %></span>
                    <a href="/edit/<%= details._id %>" class="edit">
                        <span class="fas fa-edit"></span>
                    </a>
                    <a href="/remove/<%= details._id %>" class="remove">
                        <span class="fas fa-times"></span>
                    </a>
                </li>
                <% }) %>
            </ul>
        </div>
    </div>
</body>